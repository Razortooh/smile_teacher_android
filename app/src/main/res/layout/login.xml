<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@color/white"
  	android:layout_marginBottom="15dp"
  	android:layout_gravity="center" >
       
       <ImageView
	    android:id="@+id/logo_smile_teacher"
	    android:layout_width="120dp"
	    android:layout_height="60dp"
	    android:layout_marginTop="30dp"
	    android:layout_marginBottom="30dp"
	    android:layout_centerHorizontal="true"
	    android:contentDescription="@string/logo"
	    android:src="@drawable/smile_grey_teacher" />
       
       <View
		android:id="@+id/separator"
		android:layout_width="1dip"
		android:layout_height="fill_parent"
		android:background="@color/white"
		android:layout_below="@+id/logo_smile_teacher"
		android:layout_centerHorizontal="true" />
       
       <EditText
	  	android:id="@+id/et_server_ip"
	  	android:layout_width="140dip"
		android:layout_height="wrap_content"
		android:text="@string/server_ip"
		android:hint="@string/server"
		android:textSize="16sp"
		android:maxLines="1"
		android:inputType="phone"
	    android:digits="0123456789."
	    android:singleLine="true"
	    android:layout_toLeftOf="@id/separator"
	    android:layout_below="@+id/logo_smile_teacher" />

	<Button
	  	android:id="@+id/bt_connect"
	  	android:layout_width="100sp"
		android:layout_height="wrap_content"
		android:text="@string/connect"
		android:layout_toRightOf="@+id/separator"
		android:layout_below="@+id/logo_smile_teacher"
		android:textSize="16sp"
		android:textColor="@color/white"
	    android:background="@drawable/button_green" />
       
	<ImageView 
	   android:id="@+id/logo_jamsj"
	   android:src="@drawable/jamsj_slim"
	   android:contentDescription="@string/logo"
	   android:layout_marginRight="10dip"
	   android:layout_width="100dp"
	   android:layout_height="50dp"
	   android:layout_above="@+id/tv_title"
	   android:layout_toLeftOf="@id/separator" />
	
	<ImageView
	    android:id="@+id/logo_smile"
	    android:layout_width="100dp"
	   android:layout_height="50dp"
	    android:layout_marginLeft="10dip"
	   android:layout_above="@+id/tv_title"
	    android:layout_centerHorizontal="false"
	    android:layout_toRightOf="@id/separator"
	    android:contentDescription="@string/logo"
	    android:src="@drawable/smile_grey" />
	
	<TextView
	  	android:id="@+id/tv_title"
	  	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dip"
		android:layout_marginBottom="15dip"
		android:textColor="@color/black"
		android:textSize="14sp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true" />
	
</RelativeLayout>