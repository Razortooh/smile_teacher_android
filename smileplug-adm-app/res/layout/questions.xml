<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_marginLeft="5dip"
  	android:layout_marginRight="5dip"> 
  	
    <View 
  		android:id="@+id/separator1"
		android:layout_width="85dip"
		android:layout_height="3dip"
		android:background="#FFFF0000"
		android:layout_marginLeft="371dip"
		android:layout_toRightOf="@id/buttons"/>
  	
    <View 
  		android:id="@+id/separator2"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="@color/black"
		android:layout_marginLeft="5dip"
		android:layout_marginTop="3dip"
		android:layout_toRightOf="@id/buttons"
		android:layout_below="@id/separator1"/>
  	
  	<TextView  
  	  	android:id="@+id/tv_status"
  	  	android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
      	android:text="@string/question_status"  
      	android:textStyle="bold"
      	android:textSize="14sp"
      	android:textColor="@color/black"
      	android:layout_marginLeft="5dip"
      	android:layout_marginTop="5dip"
      	android:layout_below="@id/separator1"/>
  
	<TableLayout
	  	android:id="@+id/table_status" 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:shrinkColumns="*"  
    	android:stretchColumns="*"
    	android:layout_below="@id/tv_status">
	  	
	  	<TableRow 
	  		android:id="@+id/row"
	  		android:layout_width="wrap_content"
	   	  	android:layout_height="wrap_content"
	   	  	android:layout_marginTop="5dip">
	  	
		  	<TextView  
		  	  	android:id="@+id/tv_name"
		      	android:text="@string/number"  
		      	android:textColor="@color/black"
		      	android:layout_gravity="center"/>
		           
		  	<TextView  
		      	android:id="@+id/tv_question" 
		      	android:text="@string/owner"    
		      	android:textColor="@color/black"
		      	android:layout_gravity="center"/>
		           
		  	<TextView  
		    	android:id="@+id/tv_answers"  
		      	android:text="@string/correct"   
		      	android:textColor="@color/black"
		      	android:layout_gravity="center"/>
		           
		  	<TextView  
		      	android:id="@+id/tv_score"  
		      	android:text="@string/rating"    
		      	android:textColor="@color/black"
		      	android:layout_gravity="center"/>
	  	
	  	</TableRow>
	  	
	  	<View
			android:id="@+id/separator"  
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="@color/white"
			android:layout_marginLeft="5dip"
			android:layout_marginTop="5dip"
			android:layout_below="@id/tv_title"/>
	  	
	  	<ListView 
			android:id="@+id/list_questions"
		    android:layout_width="fill_parent"
		  	android:layout_height="220dip"
		  	android:layout_below="@id/row"/>
		  	
		<View
			android:id="@+id/separator"  
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="@color/white"
			android:layout_marginLeft="5dip"
			android:layout_marginTop="5dip"
			android:layout_below="@id/list_questions"/>				  	

	</TableLayout>
	
	<Button 
  		android:id="@+id/bt_save"
  		android:layout_width="120dip"
  		android:layout_height="50dip"
  		android:layout_gravity="center_horizontal"
  		android:text="@string/save_questions"
  		android:textSize="12sp"
  		android:layout_marginTop="10dip"
  		android:layout_marginRight="10dip"
  		android:layout_below="@id/table_status"
  		android:layout_alignParentRight="true"/>
	
</RelativeLayout>